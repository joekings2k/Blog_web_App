<%- include("./partials/header")-%>
<h1>Home</h1>
<%let truncate = (str, num) => {%>
  <%if (str.length > num) {%>
    <%return str.slice(0,num)+"...";%>
  <%}else{%>
    <%return str%>
  <%}%>
<%};%>
<p><%= firstHomeContent %></p>
<%Posts.map((value)=>{%>
    <h3><%=value.title%></h3>
    <p><%= truncate(value.content,100)%> <a class="postslink" href="http://localhost:3000/posts/<%=value.title%>">See More</a></p>
<%})%>

<button class="composelink"><a href="http://localhost:3000/compose" class="postslink composelinkin">Compose</a></button>

<%- include("./partials/footer")-%>